.resume
  /* display: grid */

  /* grid-template-columns: repeat(3, 1fr) */

.resume--center
  text-align: center

.resume__headline
  margin-bottom: 0
  line-height: 1.1em

.resume__position
  font-family: var(--secondary-font)
  font-size: 1.05rem

.resume__photo_image
  display: inline
  max-width: 200px

.resume__skills_list
  margin-bottom: var(--page-vertical-spacings)
  font-size: 0.9rem

.resume__icon
  width: 1em
  height: 1em
  margin-right: 0.3em
  vertical-align: middle

.resume__pdf_link
  margin-bottom: var(--page-vertical-spacings)
  text-align: center

.resume__updated
  margin-bottom: var(--page-vertical-spacings)
  font-size: 0.7em
  color: gray
  text-align: center

.resume__block
  margin-bottom: calc(var(--page-vertical-spacings) * 2)

.resume--gray
  color: gray

.unit
  margin-bottom: var(--page-vertical-spacings)

.unit__header,
.unit__info
  margin-bottom: calc(var(--page-vertical-spacings) * 0.5)

.unit__headline
  margin-bottom: 0

.unit__gray_small
  font-size: 0.8em
  line-height: 1.3em
  color: gray

.unit__list
  padding-left: 1.2em
  list-style: circle

.unit__bracket
  display: none

.unit__position
  display: block
  font-size: 0.9em

.unit__working_dates
  display: block

.unit__info,
.unit__description
  font-size: 0.9em

