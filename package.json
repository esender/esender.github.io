{
  "name": "esender.me",
  "version": "1.0.0",
  "description": "Personal website",
  "main": "index.html",
  "author": "Marat Abdulin <esend.work@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/file": "^2.2.2",
    "autoprefixer": "^9.7.3",
    "css-mqpacker": "^7.0.0",
    "husky": "^3.0.8",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.23",
    "postcss-preset-env": "^6.7.0",
    "posthtml": "^0.12.0",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "sugarss": "^2.0.0"
  },
  "scripts": {
    "start": "parcel src/index.pug",
    "build": "yarn clean && NODE_ENV=production node scripts/build.js",
    "clean": "rimraf dist/ index.html *.css *.png",
    "lint": "stylelint src/**/*.sss src/*.sss",
    "test": "yarn lint && yarn build && size-limit"
  },
  "engines": {
    "node": "^12.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": false
      },
      "postcss-preset-env": {
        "stage": 0,
        "importFrom": [
          {
            "customMedia": {
              "--mobile-medium": "(width >= 360px)",
              "--small-tablet": "(width >= 660px)",
              "--tablet": "(width >= 768px)",
              "--desktop": "(width >= 1024px)"
            }
          }
        ]
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": null,
      "block-closing-brace-newline-before": null,
      "block-opening-brace-space-before": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "size-limit": [
    {
      "name": "HTML's",
      "path": "index.html",
      "limit": "1 KB"
    },
    {
      "name": "Styles",
      "path": "src.*.css",
      "limit": "2 KB"
    }
  ]
}
